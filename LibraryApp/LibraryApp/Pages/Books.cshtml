@page
@model LibraryApp.Pages.BooksModel
@using DataModels.Models;
@using System;


<h2>Books List</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
    <!--Placed the button in a form to take advantage of the cshtml.cs Post function-->
    <form method="post" asp-page-handler="GenerateBooks">
    <button type="submit" class="btn btn-primary btn-block">Generate Bogus Data</button>
    </form>
<br>
</div>
<div>
<label for="myInput">Search:</label>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
</div>
</br>
<a asp-page="PostEdit" class="btn btn-success">Add Book</a>
</br>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Published Date</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Isbn</td>
                <td>@(book.PublishedDate.HasValue ? book.PublishedDate.Value.ToString("d") : "")</td>
                <td>@book.Price.ToString("C")</td>
                <td>
                    <a asp-page="PostEdit" asp-route-id="/delete/@book.Id" class="btn btn-primary">Edit</a>
                   
                    <form method="post" asp-page-handler="PostDelete" asp-route-id="@book.Id" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

